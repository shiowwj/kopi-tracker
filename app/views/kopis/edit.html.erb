<h1>Edit Kopi</h1>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>

	<%= form.collection_select :roast_id, @roasts, :id, :roast_type %>
	<%= form.collection_select :origin_id, @origins, :id, :location %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>